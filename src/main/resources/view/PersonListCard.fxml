<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" styleClass="member-card"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
    </columnConstraints>

    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0" spacing="2">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15"/>
      </padding>

      <!-- Title row: index + name -->
      <HBox spacing="6" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <Region fx:constant="USE_PREF_SIZE"/>
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label"/>
      </HBox>

      <!-- Meta: Year of Study Â· Faculty (shown/hidden by controller) -->
      <Label fx:id="meta" styleClass="cell_small_label"/>

      <!-- Tags -->
      <FlowPane fx:id="tags" id="tags"/>

      <!-- Contact / details -->
      <Label fx:id="phone"   styleClass="cell_small_label"/>
      <Label fx:id="address" styleClass="cell_small_label"/>
      <Label fx:id="email"   styleClass="cell_small_label"/>

      <!-- Points -->
      <Label fx:id="points"  styleClass="cell_small_label"/>
    </VBox>
  </GridPane>
</HBox>
